@model DNE.Data.ViewModels.CategoryLeadViewModel

@using DNE.Services.Extentions

@{
    ViewData["Title"] = "Add Lead";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
}

<div class="card text-white">
    <div class="card-header bg-primary" >Add New Lead</div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.FirstName"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2" placeholder="Name" asp-for="@Model.Lead.FirstName" />
                </div>
                <span asp-validation-for="@Model.Lead.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.LastName"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.LastName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.Email"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.Email" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.Phone"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.Phone" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.CategoryId"></label>
                </div>
                <div class="col-4">
                   
                    <select class="form-select mt-2" asp-for="@Model.Lead.CategoryId" asp-items="@Model.Categories.ToSelectListItem(Model.Lead.CategoryId)"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.CreatedByUserId"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.CreatedByUserId" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.UpdatedByUserId"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.UpdatedByUserId" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.DateCreated"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.DateCreated" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-primary">
                    <label asp-for="@Model.Lead.DateUpdated"></label>
                </div>
                <div class="col-4">
                    <input type="text" class="form-control mt-2 bg-white" asp-for="@Model.Lead.DateUpdated" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 offset-2 text-primary">
                    <button type="submit" class="btn btn-info form-control mt-2"><i class="fas fa-plus"></i> &nbsp; Add Lead</button>
                </div>
                <div class="col-2">
                    <a class="btn btn-dark text-white form-control mt-2" asp-controller="Lead" asp-action="Index"><i class="fas fa-arrow-left"></i> &nbsp; Back To List</a>
                </div>
            </div>
        </form>
     </div>
</div>


