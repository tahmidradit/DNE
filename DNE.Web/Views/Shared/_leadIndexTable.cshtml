@model IEnumerable<Lead>

@if (Model.Count() > 0)
    {
        <div class="mt-2">
            <table id="" class="table table-hover table-bordered text-center" style="background-color:lightskyblue" width="100%">
                    <thead class="table table-primary">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Id)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstName)</th>
                            <th>@Html.DisplayNameFor(m => m.LastName)</th>
                            <th>@Html.DisplayNameFor(m => m.Email)</th>
                            <th>@Html.DisplayNameFor(m => m.Phone)</th>
                            <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
                            <th>@Html.DisplayNameFor(m => m.CreatedByUserId)</th>
                            <th>@Html.DisplayNameFor(m => m.UpdatedByUserId)</th>
                            <th>@Html.DisplayNameFor(m => m.DateCreated)</th>
                            <th>@Html.DisplayNameFor(m => m.DateUpdated)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => items.Id)</td>
                                <td>@Html.DisplayFor(m => items.FirstName)</td>
                                <td>@Html.DisplayFor(m => items.LastName)</td>
                                <td>@Html.DisplayFor(m => items.Email)</td>
                                <td>@Html.DisplayFor(m => items.Phone)</td>
                                <td>@Html.DisplayFor(m => items.Category.Name)</td>
                                <td>@Html.DisplayFor(m => items.CreatedByUserId)</td>
                                <td>@Html.DisplayFor(m => items.UpdatedByUserId)</td>
                                <td>@Html.DisplayFor(m => items.DateCreated)</td>
                                <td>@Html.DisplayFor(m => items.DateUpdated)</td>
                                <td>
                                    <a asp-controller="Lead" asp-action="Edit" asp-route-id="@items.Id"  class="btn btn-dark text-white btn-sm"><i class="fas fa-edit"></i> &nbsp; Edit</a>
                                    <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-controller="Lead" asp-route-id="@items.Id"><i class="fas fa-trash-alt"></i> &nbsp; Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
        </div>
    }
    else
    {
        <br />
        <div class="alert alert-danger text-danger" role="alert">No leads available right now !</div> 
    }
</div>
